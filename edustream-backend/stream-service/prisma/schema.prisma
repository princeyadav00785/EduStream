generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id             String      @id @default(uuid())
  title          String
  description    String?
  instructorId   String      @relation(fields: [instructorId], references: [id], onDelete: Cascade)
  startTime     DateTime    @default(now())
  endTime           DateTime?
  isActive       Boolean     @default(true)
  participants        Json        @default(json("{}"))
  recordingLink  String?
  maxParticipants Int?
  sessionType    SessionType @default(LIVE)
  tags           String[]    @default([])
  visibility     Visibility  @default(PUBLIC)
  duration       Int?
}

enum SessionType {
  LIVE
  RECORDED
  HYBRID
}

enum Visibility {
  PUBLIC
  PRIVATE
}
